{
  "verbose": true,
  "clearMocks": true,
  "restoreMocks": true,
  "collectCoverage": true,
  "setupFilesAfterEnv": ["./config/enzyme.js", "./config/testing-library.js"],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!**/node_modules/**",
    "!src/index.tsx",
    "!src/routes/**",
    "!src/config/**",
    "!src/theme/**",
    "!src/**/styles.*",
    "!src/styles/*.*"
  ],
  "moduleNameMapper": {
    "\\.(svg)$": "<rootDir>/config/module-mock.js"
  }
}
